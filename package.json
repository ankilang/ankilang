{
  "name": "ankilang",
  "version": "0.1.0",
  "description": "Webapp de création de flashcards (Basic & Cloze) pour l'apprentissage des langues, avec export Anki (.apkg)",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter=@ankilang/web dev",
    "build": "pnpm --filter=@ankilang/web build",
    "build:all": "pnpm -r build",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "lint": "echo 'Lint configuration à venir'",
    "clean": "pnpm -r clean",
    "install:all": "pnpm install",
    "prebuild": "corepack enable && pnpm install --frozen-lockfile",
    "build:cloudflare": "cd apps/web && npm run build",
    "build:appwrite": "pnpm -C apps/web build",
    "security:check": "rg -n 'netlify\\.app' apps/web/src && { echo 'Legacy Netlify URL found'; exit 1; } || true"
  },
  "keywords": [
    "flashcards",
    "anki",
    "language-learning",
    "occitan",
    "pwa",
    "react",
    "typescript"
  ],
  "author": "Ankilang Team",
  "license": "MIT",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad",
  "dependencies": {
    "appwrite": "^20.1.0",
    "node-appwrite": "^12.0.1"
  }
}
